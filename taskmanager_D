CREATE DATABASE taskmanager_Db;

USE taskmanager_Db;

CREATE TABLE Task

	(

		id INT PRIMARY KEY AUTO_INCREMENT,
        Days_deadline int(50) NOT NULL,

        Description VARCHAR(240) ,
		proirity_level Varchar(240)
    );

